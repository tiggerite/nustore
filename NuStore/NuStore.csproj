<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
	<PackAsTool>true</PackAsTool>
	<ToolCommandName>nustore</ToolCommandName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.8</Version>
    <PackageProjectUrl>https://github.com/tiggerite/nustore</PackageProjectUrl>
    <Title>NuStore</Title>
    <Description>NuStore download nuget packages which declared in the *.deps.json, and save to store folder, for minify .net core publish size</Description>
    <PackageTags>deps nuget package store folder</PackageTags>
    <RepositoryUrl>https://github.com/tiggerite/nustore</RepositoryUrl>
    <Authors>tiggerite</Authors>
    <PackageId>nustore</PackageId>
    <Copyright>MIT</Copyright>
    <PackageLicenseUrl>https://licenses.nuget.org/MIT</PackageLicenseUrl>
    <LangVersion>default</LangVersion>
    <PackageVersion>1.1.8</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="pack release cmd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="ILRepack.NETStandard" Version="2.0.4" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>